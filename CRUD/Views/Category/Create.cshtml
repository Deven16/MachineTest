@model CRUD.Models.Category
@{
    Layout = "~/Views/Shared/_Layout.cshtml";
    ViewData["Title"] = "Create Category";
}

<div class="container mt-4">
    <h2 class="mb-3">Create Category</h2>

    
    <form asp-action="Create" method="post">
        <div class="mb-3">
            <label asp-for="CategoryName" class="form-label">Category Name</label>
            <input name="CategoryName" class="form-control" required />
            <span asp-validation-for="CategoryName" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-primary">Save</button>
        <a href="/Category/Index" class="btn btn-secondary">Back</a>
    </form>
</div>